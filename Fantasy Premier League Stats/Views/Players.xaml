<Page
    x:Class="Fantasy_Premier_League_Stats.Views.Players"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:data="using:Fantasy_Premier_League_Stats.Data"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Fantasy_Premier_League_Stats.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <ListView ItemsSource="{x:Bind PlayersList}">
            <ListView.ItemTemplate>
                <DataTemplate x:DataType="data:Player">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="{x:Bind team}"/>
                        <TextBlock Text="{x:Bind first_name}" Margin="0,0,3,0"/>
                        <TextBlock Text="{x:Bind second_name}"/>
                        <TextBlock Text="{x:Bind goals_scored}"/>
                        <TextBlock Text="{x:Bind assists}"/>
                        <TextBlock Text="{x:Bind bonus}"/>
                        
                    </StackPanel>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>


    </Grid>
</Page>
